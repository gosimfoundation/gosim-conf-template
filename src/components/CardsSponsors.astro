---
interface Props {
  title: string;
  sponsors: Array<{
    name: string;
    image: string;
  }>;
}

const { title, sponsors } = Astro.props;
---

<section
  class="section section-sponsors"
  data-theme-section="light"
  data-bg-section="lightgray"
>
  <div class="container">
    <div class="proud-sponsors">
      <h5>{title}</h5>
    </div>

    <div class="proud-sponsors__flex">
      {
        sponsors?.map((sponsor) => (
          <div class="sponsor-card flex flex-col items-center">
            <img src={sponsor.image} alt={sponsor.name} loading="lazy" />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .section-sponsors {
    padding: 4rem 0;
  }

  .sponsor-card img {
    max-height: 80px;
    width: auto;
  }
  .proud-sponsors {
    display: flex;
    justify-content: center;
  }
  .proud-sponsors__flex {
    display: flex;
    justify-content: space-between;
    width: 80%;
    margin: auto;
    padding: 48px 0px;
  }
  @media only screen and (max-width: 810px) {
    .proud-sponsors__flex {
      width: 100%;
    }
    .sponsor-card img {
      max-height: 60px;
      width: auto;
    }
  }
</style>
